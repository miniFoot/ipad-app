.popin
  position: absolute
  z-index: 3
  height: 100%
  width: 100%
  top: 0
  left: 0

  opacity: 0
  visibility: hidden

  &.show
    animation: showPop 0.6s ease forwards

  @keyframes showPop {
    0%{
      opacity: 0
      visibility: hidden
    }
    1%{
      opacity: 0
      visibility: visible
    }
    100%{
      opacity: 1
      visibility: visible
    }
  }

  &.red
    background: red

  &.blue
    background: blue

  .cross
    position: absolute
    top: 10px
    right: 10px
    width: 40px

  .content
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: 100%

    .title
      color: white
      text-transform: uppercase;
      font-size: 210px
      font-family: 'gotham-bold'
      width: 90%
      margin: 0 auto

      img
        display: inline-block
        width: 310px

    .text
      color: white
      font-family: 'gotham-light'
      width: 80%
      margin: 0 auto

      img
        width: 70px
        float: left

      span
        text-transform: uppercase
        margin-left: 10px

      h2
        width: 90%
        margin-left: 80px
        margin-top: 10px
