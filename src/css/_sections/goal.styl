.popin
  position: absolute
  z-index: 3
  height: 100%
  width: 100%
  top: 0
  left: 0

  opacity: 0
  visibility: hidden

  &:before
    content: ""
    position: absolute
    top: 0
    left: 0
    height: 10px
    width: 100%
    background-color: white

  &.show
    animation: showPop 8s ease forwards

  @keyframes showPop {
    0%{
      opacity: 0
      visibility: hidden
    }
    1%{
      opacity: 0
      visibility: visible
    }
    20%{
      opacity: 1
      visibility: visible
    }
    80%{
      opacity: 1
      visibility: visible
    }
    100%{
      opacity: 0
      visibility: visible
    }
  }

  &.red
    background: red

  &.blue
    background: blue

  .cross
    position: absolute
    top: 20px
    right: 10px
    width: 40px

  .content
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: 100%

    .title
      color: white
      text-transform: uppercase;
      font-size: 210px
      font-family: 'gotham-bold'
      width: 90%
      margin: 0 auto

      img
        display: inline-block
        width: 310px

        opacity: 0
        transform: translateX(-100px)

      span
        display: inline-block
        opacity: 0
        transform: translateY(-100px)

    .text
      color: white
      font-family: 'gotham-light'
      width: 80%
      margin: 0 auto

      opacity: 0
      transform: translateY(-50px)

      img
        width: 70px
        float: left

      span
        text-transform: uppercase
        margin-left: 10px

      h2
        width: 90%
        margin-left: 80px
        margin-top: 10px

.show
  .content
    .title
      animation: blob 1s ease-out infinite alternate
      animation-delay: 1s

      @keyframes blob
        0% {transform: translateY(0px) scale(1) }
        100% {transform: translateY(0px) scale(1.08) }

      span
        transform: translateY(0px)
        opacity: 1
        transition: all 0.6s ease

      img
        transform: translateX(0px)
        opacity: 1
        transition: all 0.6s ease
        transition-delay: 0.4s

    .text
      transform: translateY(0px)
      opacity: 1
      transition: all 0.6s ease
      transition-delay: 0.4s
