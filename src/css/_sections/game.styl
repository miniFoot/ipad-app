.game
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  color: $green
  font-size: 160px
  font-family 'Gotham'

  opacity: 0
  pointer-events: none
  transition: all 0.6s ease

  .score
    display: inline

  .action
    background-color rgba(255, 255, 255, 0.5)
    color : white
    padding: 20px 30px
    border: none
    border-radius: 6px
    font-family 'Gotham'
    margin-top: 80px
    font-size: 12px
    display: block;
    margin: 250px auto 0
    transition: all 0.6s ease

  &.show-score
    transform: translate(-50%, -30%)
    opacity: 1
    transition: all 0.6s ease
    pointer-events: auto
