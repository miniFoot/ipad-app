.game
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  color: $green
  font-size: 230px
  font-family 'gotham-bold'
  width: 100%
  text-align: center

  opacity: 0
  pointer-events: none
  transition: all 0.6s ease

  .score
    display: inline
    position: relative

    &.blue
      position: absolute
      left: 25%
      transform: translateX(-50%)

    &.red
      position: absolute
      right: 25%
      transform: translateX(50%)

    .number
      min-width: 160px
      display: inline-block

    .change
      position: absolute
      top: 60px
      left: 25px
      height: 50px

      img
        width: 40px
        margin: 0 10px

  span
    //margin-left: 70px

  .action
    background-color rgba(255, 255, 255, 0.5)
    color : white
    padding: 20px 30px
    border: none
    border-radius: 6px
    font-family 'gotham-bold'
    margin-top: 80px
    font-size: 12px
    display: block;
    margin: 170px auto 0
    transition: all 0.6s ease

  &.show-score
    transform: translate(-50%, -30%)
    opacity: 1
    transition: all 0.6s ease
    pointer-events: auto
