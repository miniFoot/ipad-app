html,
body
    width 100%
    height 100%
    margin 0
    padding 0
    position relative
    overflow hidden

body
  background: linear-gradient(135deg, rgba(59,29,76,1) 0%, rgba(59,29,76,1) 22%, rgba(0,36,82,1) 100%)
  font-family: 'gotham-book'

  .logo
    height: 20vh
    display: block
    margin: 40px auto 0

  h1
    text-transform: uppercase
    color: $grey
    text-align: center
    font-weight: lighter;
    font-size: 26px;

  #timer
    position: absolute
    bottom: 5px
    left: 50%
    color: white
    font-size: 14px
