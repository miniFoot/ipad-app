html,
body
    width 100%
    height 100%
    margin 0
    padding 0
    position relative
    overflow hidden

    &:before
      content: ""
      position: absolute
      top: 0
      left: 0
      height: 10px
      width: 100%
      background-color: $green

body
  background: linear-gradient(135deg, rgba(59,29,76,1) 0%, rgba(59,29,76,1) 22%, rgba(0,36,82,1) 100%)
  font-family: 'gotham-book'

  .logo
    height: 20vh
    display: block
    margin: 40px auto 0

  h1
    text-transform: uppercase
    color: $grey
    text-align: center
    font-weight: lighter;
    font-size: 26px;
